@model test.Book

<center>
    <h2>Add book</h2>
</center>
<hr />
<form asp-controller="Book" asp-action="Create">

    <div class="form-group row">
        <label asp-for="BookName" class="col-sm-2 col-form-label">Book title</label><br />
        <div class="col-sm-10">
            <input type="text" asp-for="BookName" class="form-control" placeholder="Book title" />
        </div>

        <label asp-for="AuthorName" class="col-sm-2 col-form-label">Author name</label><br />
        <div class="col-sm-10">
            <input type="text" asp-for="AuthorName" class="form-control" placeholder="Author name" />
        </div>

        <label asp-for="PublishDate" class="col-sm-2 col-form-label">Publish date</label><br />
        <div class="col-sm-10">
            <input type="date" asp-for="PublishDate" class="form-control" placeholder="Publish date" />
        </div>

        <label asp-for="AmountOfPages" class="col-sm-2 col-form-label">Pages</label><br />
        <div class="col-sm-10">
            <input type="number" asp-for="AmountOfPages" class="form-control" placeholder="Pages" />
        </div>

        <label asp-for="Ratings" class="col-sm-2 col-form-label">Ratings</label><br />
        <div class="col-sm-10">
            <input type="number" step="0.01" id="totalAmt" asp-for="Ratings" class="form-control"
                placeholder="Ratings" />
        </div>
    </div>

    <input type="submit" value="Send" class="btn btn-primary" />
    </p>
</form>